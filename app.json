{
  "expo": {
    "name": "Helping Hand",
    "slug": "helping-hand",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "helpinghand",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#2E7D5B"
    },
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.helpinghand",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "We need your location to show nearby donors and receivers."
      }
    },
    "android": {
      "package": "com.helpinghand",
      "adaptiveIcon": {
        "backgroundColor": "#2E7D5B",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "permissions": ["ACCESS_FINE_LOCATION", "ACCESS_COARSE_LOCATION"]
    },
    "web": {
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-router",
        {
          "origin": "https://replit.com/"
        }
      ],
      "expo-font",
      "expo-web-browser",
      [
        "expo-location",
        {
          "locationWhenInUsePermission": "Allow Helping Hand to access your location to show nearby donors."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
